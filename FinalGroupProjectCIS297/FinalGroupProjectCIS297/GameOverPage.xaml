            </Image.RenderTransform>
        </Image>
        <Image Source ="/Assets/BulletButSmaller.jpg"  HorizontalAlignment="Left" Height="40" Margin="492,390,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="8.959,-0.397" UseLayoutRounding="False" d:LayoutRounding="Auto/"/>
        <TextBlock x:Name="ganeOverScore" HorizontalAlignment="Left" Margin="475,170,0,0" TextWrapping="Wrap" Text="Score:" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="20"/>
        <TextBlock x:Name="GameOverTitle" HorizontalAlignment="Left" Margin="458,104,0,0" TextWrapping="Wrap" Text="Game Over" VerticalAlignment="Top" FontFamily="Forte" FontSize="23"/>
        <Image Source ="Assets/powerUp.jpg"  HorizontalAlignment="Left" Height="66" Margin="156,147,0,0" VerticalAlignment="Top" Width="61"/>
        <Image Source ="Assets/powerUp.jpg"  HorizontalAlignment="Left" Height="65" Margin="766,155,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="8.959,-0.397"/>
        <Image Source ="Assets/alien.jpg"  HorizontalAlignment="Left" Height="65" Margin="753,466,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="8.959,-0.397"/>
        <Image Source ="Assets/alien.jpg"  HorizontalAlignment="Left" Height="65" Margin="151,473,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="8.959,-0.397"/>
