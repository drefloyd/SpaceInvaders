        <Image Source ="Assets/BulletButSmaller.jpg"  HorizontalAlignment="Left" Height="40" Margin="319,260,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="8.959,-0.397" UseLayoutRounding="False" d:LayoutRounding="Auto">
